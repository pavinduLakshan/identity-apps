{
    "extends": "../../tsconfig.base.react.json",
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "dist/types",
        "lib": [ "ESNext", "DOM", "DOM.Iterable", "ScriptHost" ],
        "outDir": "dist/src",
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "types": [ "node", "webpack-env", "jest", "@testing-library/jest-dom" ],
        "paths": {
            "semantic-ui-react": ["node_modules/semantic-ui-react/"]
        }
    },
    "exclude": [
        "build",
        "cache",
        "coverage",
        "dist",
        "node_modules",
        "scripts",
        "**/test-configs/*",
        "jest.config.ts",
        "**/tests/*",
        "**/__tests__/*",
        "**/__mocks__/*",
        "**/*.test.js",
        "**/*.test.jsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.js",
        "**/*.spec.jsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}

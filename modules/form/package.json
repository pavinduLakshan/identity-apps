{
    "private": true,
    "name": "@wso2is/form",
    "version": "2.1.3",
    "description": "Form library for WSO2 Identity Server front end applications.",
    "keywords": [
        "WSO2",
        "WSO2 IS",
        "WSO2 Identity Server",
        "WSO2 Identity Apps",
        "form"
    ],
    "main": "dist/index.cjs",
    "types": "dist/index.d.ts",
    "author": "WSO2",
    "license": "Apache-2.0",
    "scripts": {
        "build": "pnpm nx run form:build",
        "clean": "pnpm clean:lock-files && pnpm clean:build && pnpm clean:node-modules",
        "clean:build": "pnpm rimraf dist",
        "clean:lock-files": "pnpm rimraf package-lock.json && pnpm rimraf pnpm-lock.yaml && pnpm rimraf yarn.lock",
        "clean:node-modules": "pnpm rimraf node_modules",
        "compile": "pnpm tsc -p tsconfig.json --incremental",
        "lint": "pnpm lint:all",
        "lint:all": "pnpm lint:targeted -- .",
        "lint:autofix": "pnpm lint:all -- --fix",
        "lint:targeted": "eslint --ext .js,.jsx,.ts,.tsx --resolve-plugins-relative-to .",
        "test": "jest --passWithNoTests",
        "test:coverage": "jest --passWithNoTests --coverage --collect-coverage",
        "test:watch": "pnpm test -- --watch",
        "typecheck": "pnpm compile"
    },
    "dependencies": {
        "@wso2is/core": "^2.0.60",
        "@wso2is/react-components": "catalog:",
        "@wso2is/validation": "catalog:",
        "final-form": "^4.20.2",
        "joi": "^17.4.0",
        "lodash-es": "catalog:",
        "react-final-form": "^6.5.3",
        "semantic-ui-react": "catalog:",
        "@oxygen-ui/react": "^1.13.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "catalog:",
        "@types/jest": "^29.5.12",
        "@types/lodash-es": "catalog:",
        "@types/react": "catalog:",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "eslint": "8.46.0",
        "eslint-plugin-import": "catalog:",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "catalog:",
        "jest": "^29.7.0",
        "rimraf": "catalog:",
        "ts-jest": "^29.1.2",
        "typescript": "^4.6.4"
    }
}

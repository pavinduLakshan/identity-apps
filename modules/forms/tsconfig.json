{
    "extends": "../../tsconfig.base.react.json",
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "types": [ "node", "jest" ]
    },
    "files": [],
    "include": [],
    "references": [
        {
            "path": "./tsconfig.lib.json"
        },
        {
            "path": "./tsconfig.spec.json"
        }
    ],
    "exclude": [
        "coverage",
        "dist",
        "node_modules",
        "scripts",
        "test-configs",
        "jest.config.ts",
        "**/tests/*",
        "**/__tests__/*",
        "**/__mocks__/*",
        "**/*.test.js",
        "**/*.test.jsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.js",
        "**/*.spec.jsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}

{
    "name": "i18n",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "modules/i18n/src",
    "projectType": "library",
    "generators": {},
    "prefix": "@wso2is",
    "tags": [],
    "implicitDependencies": [
        "core"
    ],
    "targets": {
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{workspaceRoot}/modules/i18n/dist"],
            "options": {
                "outputPath": "modules/i18n.dist",
                "tsconfig": "modules/i18n/tsconfig.json",
                "project": "modules/i18n/package.json",
                "entryFile": "modules/i18n/src/index.ts",
                "format": [
                    "esm"
                ],
                "compiler": "babel",
                "updateBuildableProjectDepsInPackageJson": true
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm lint",
                "cwd": "modules/i18n",
                "parallel": false
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm test",
                "cwd": "modules/i18n",
                "parallel": false
            }
        },
        "test-coverage": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm test -- --coverage --collect-coverage",
                "cwd": "modules/i18n",
                "parallel": false
            }
        }
    }
}

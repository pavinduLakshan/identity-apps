{
    "private": true,
    "name": "@wso2is/theme",
    "version": "2.1.0",
    "description": "Theme for web components of WSO2 Identity Server Webapps.",
    "keywords": [
        "WSO2",
        "WSO2 IS",
        "WSO2 Identity Server",
        "WSO2 Identity Apps",
        "theme"
    ],
    "main": "src/index.js",
    "scripts": {
        "prebuild": "pnpm clean:build",
        "build": "pnpm prebuild && pnpm compile -- --skipSample --skipManifest",
        "build:dev": "pnpm build -- --skipHashing",
        "clean": "pnpm clean:lock-files && pnpm clean:build && pnpm clean:node-modules",
        "clean:build": "pnpm rimraf dist",
        "clean:lock-files": "pnpm rimraf package-lock.json && pnpm rimraf pnpm-lock.yaml && pnpm rimraf yarn.lock",
        "clean:node-modules": "pnpm rimraf node_modules",
        "compile": "node scripts/build.js",
        "lint": "pnpm lint:all",
        "lint:all": "pnpm lint:targeted -- .",
        "lint:autofix": "pnpm lint:all -- --fix",
        "lint:targeted": "eslint --ext .js,.jsx,.ts,.tsx --resolve-plugins-relative-to . --max-warnings=0",
        "test": "jest --passWithNoTests",
        "test:watch": "pnpm test -- --watch",
        "watch": "watch \"pnpm build\" src"
    },
    "author": "WSO2",
    "license": "Apache-2.0",
    "devDependencies": {
        "@babel/core": "^7.11.4",
        "@babel/register": "catalog:",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "babel-plugin-transform-es2015-modules-commonjs": "catalog:",
        "clean-css": "catalog:",
        "eslint": "8.46.0",
        "eslint-plugin-import": "catalog:",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "catalog:",
        "fs-extra": "catalog:",
        "jest": "^29.7.0",
        "less": "catalog:",
        "less-plugin-rewrite-variable": "catalog:",
        "less-to-json": "catalog:",
        "merge-files": "catalog:",
        "rc-tree": "catalog:",
        "replace": "catalog:",
        "rimraf": "catalog:",
        "semantic-ui-css": "catalog:",
        "semantic-ui-less": "catalog:",
        "ts-jest": "^29.1.2",
        "watch": "catalog:"
    }
}
